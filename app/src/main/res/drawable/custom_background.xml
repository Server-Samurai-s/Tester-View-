<!-- custom_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFC107" /> <!-- Change to your desired color -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#FF5722" />

    <!-- Corner radius -->
    <corners
        android:radius="8dp" /> <!-- Corner radius in dp -->
</shape>
